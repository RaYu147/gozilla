<%= form_for @search_form, as: 'search', url: :admin_test_infos,
    html: { method: :get, class: 'search' }, params: :test_basic_info_id do |f| %>

  <%= markup do |m|
    p = FormPresenter.new(f, self)
    m << p.label(:question_contents, '設問検索')
    m.br
    m << p.text_field(:question_contents)
    m << '&nbsp;'
    m << f.submit('検索')
  end %>

<% end %>
