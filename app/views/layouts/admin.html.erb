<!DOCTYPE html>
<html>
<head>
  <title><%= document_title %></title>
  <%= stylesheet_link_tag    'admin', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div id="wrapper">
    <%= render 'admin/shared/header' %>
    <%=
      if current_account
        render 'admin/shared/menu'
      end
    %>
    <div id="container">
      <%= yield %>
    </dir>
  </div>
</body>
</html>
